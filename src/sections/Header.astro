---
import Image from "astro/components/Image.astro";
import ProfileImage from "@/assets/imgs/profile.webp";
import { Icon } from "astro-icon/components";
---

<header
  class="w-full h-20 sticky top-0 flex justify-between items-center mx-auto p-4 bg-white rounded-lg z-50"
>
  <div class="h-full flex justify-center items-center gap-4">
    <span class="max-w-12 h-full rounded-full overflow-hidden">
      <Image class="object-contain" src={ProfileImage} alt="Kirby Foto" />
    </span>
    <h2>Daniel Manzano</h2>
  </div>
  <button><Icon class="w-7 h-7" name="eva:moon-outline" /></button>
</header>
